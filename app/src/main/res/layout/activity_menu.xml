<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.simcoder.tinder.Menu">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/techrtransparent"
        android:visibility="visible"
        app:srcCompat="@drawable/techrtransparent" />

    <Button
        android:id="@+id/favourites_list"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="favourites list" />

    <Button
        android:id="@+id/browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="browse" />

    <Button
        android:id="@+id/discarded_list"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:text="discarded list" />

</LinearLayout>

